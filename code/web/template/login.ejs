<!DOCTYPE html>
<html lang="fr">
    <head>
        <%- include('head'); %>
    </head>
    <body class="container bg-secondary" method="post" action="/user/login">
        <div class="row justify-content-center my-5">
            <div class="col-4 bg-light py-3 rounded">
                <h6 class="text-center">J'ai déjà un compte</h6>
                <form method="POST" action="/user/login">
                    <input type="email" id="inputLogin" name="mail" class="form-control form-top" placeholder="address email" required> <br>
                    <input type="password" id="inputPassword"i name="password" class="form-control form-bottom" placeholder="Mot de passe" minlength="8" required> <br>
                    <% if (typeof errorLogin != 'undefined') { %>
                    <div class="text-danger text-center"><%= errorLogin %></div><br>
                    <% } %>
                    <button class="btn btn-primary text-center" type="submit">SE CONNECTER</button>
                </form>
            </div>
        </div>
        <div class="row justify-content-center ">
            <div class="col-4 d-flex justify-content-center flex-column bg-light py-3 rounded">
                <h6 class="text-center">Nouveau sur notre Site</h6>
                <a class="btn btn-primary btn-sm" href="/user/signup">S'INSCRIRE</a>
            </div>
        </div>
    </body>
</html>